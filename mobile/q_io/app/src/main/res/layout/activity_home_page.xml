<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    tools:context=".HomePageActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="#f0f7da">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/company_logo_id"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="0dp"
                app:srcCompat="@drawable/logo_com" />

            <TextView
                android:id="@+id/company_name_id"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="TEST. Nom du commerçant"
                android:textSize="22dp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="403dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/employee_name_id"
                    android:layout_width="142dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="Bienvenue Maria!"
                    android:textSize="25dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/temps_text_id"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/my_gradient"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#636363"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/chronometer_id"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/my_gradient"
                    android:gravity="center"
                    android:textColor="#ff0000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/temps_attente_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_gradient"
                    android:gravity="center"
                    android:textColor="#ff0000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Chronometer
                    android:id="@+id/count_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_gradient"
                    android:gravity="center"
                    android:textColor="#ff0000"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/confirm_btn_id"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    android:layout_marginTop="17dp"
                    android:background="#4DFFC107"
                    android:text="Confirmer la présence du client"
                    android:textColor="#636363"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/chronometer" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/my_gradient"
                    android:gravity="center"
                    android:text="№ suivent:"
                    android:textColor="#636363"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/current_number_id"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/my_gradient"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textColor="#636363"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/invite_btn_id"
                    android:layout_width="120dp"
                    android:layout_height="293dp"
                    android:layout_below="@+id/output"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="50dp"
                    android:background="#4DFFFFFF"
                    android:text="Inviter client"
                    android:textColor="#008000"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/my_gradient"
                    android:gravity="center"
                    android:text="Dans la file:"
                    android:textColor="#636363"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total_queue_id"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/my_gradient"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textColor="#636363"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/terminate_btn_id"
                    android:layout_width="120dp"
                    android:layout_height="295dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="50dp"
                    android:background="#3203DAC5"
                    android:text="Mettre fin à la visite actuelle du client"
                    android:textColor="#bf0000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/deconnection_btn_id"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="#3203DAC5"
                android:gravity="center"
                android:text="Déconnection"
                android:textColor="#bf0000"
                android:textSize="17dp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progress_bar_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/time_app_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:background="#FFC107"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="#636363"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_app_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFC107"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="#636363"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
    </TableLayout>
</LinearLayout>